<Window x:Class="MES_OpcUA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MES_OpcUA"
        mc:Ignorable="d"
        Height="200" Width="700" MaxHeight="200" MaxWidth="700" MinHeight="200" MinWidth="700"
        WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Normal" 
        AllowsTransparency="True"
        BorderThickness="5" BorderBrush="#252629">
    <Border BorderBrush="Green" BorderThickness="1">

        <Grid Background="#1e1f21">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Name="btnExit" Grid.Column="2" Grid.Row="0" Height="30" Width="30"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                BorderBrush="DarkRed" Background="IndianRed"
                BorderThickness="5"
                Foreground="DarkRed"
                FontSize="12"
                FontWeight="Bold"
                Margin="0,8,10,0"
                >X
        </Button>
        <StackPanel Grid.Column="0" Grid.RowSpan="2"
                    Orientation="Horizontal">
            <WrapPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.ColumnSpan="2">
                <!-- <TextBlock FontSize="22" Foreground="#c22b55" Margin="10" FontWeight="Black">Adress: opc.tcp://</TextBlock>-->
                <Border Style="{StaticResource startupBorder}">
                    <TextBox Style="{StaticResource startupTextBox}"
                        Name="AddressBox" Width="450"/>
                </Border>

                <Border Style="{StaticResource startupBorder}" Width="100"
                        HorizontalAlignment="Left">
                    <TextBox Style="{StaticResource startupTextBox}" 
                             VerticalAlignment="Top" Margin="10"
                             Width="60"/>
                </Border>
            </WrapPanel>
        </StackPanel>
        <Border 
            Grid.Row="1" Grid.Column="3">
            <Button Style="{StaticResource startupButton}"
                    Grid.Column="2" Grid.Row="2" Margin="0,0,10,0" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    BorderBrush="#16470b" Background="#309e18"/>
        </Border>
    </Grid>
    </Border>
</Window>
